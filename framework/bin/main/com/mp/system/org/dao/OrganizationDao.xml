<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.aas.system.org.dao.OrganizationDao" >
  <resultMap id="BaseResultMap" type="com.aas.system.org.domain.OrganizationModel" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="f_org_code" property="orgCode" jdbcType="VARCHAR" />
    <result column="f_org_name" property="orgName" jdbcType="VARCHAR" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, f_org_code, f_org_name
  </sql>
  <!-- 按ID加载组织机构 -->
  <select id="loadOrganization" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select 
    <include refid="Base_Column_List" />
    from t_org
    where id = #{id,jdbcType=INTEGER}
  </select>
  <!-- 条件查询组织机构 -->
  <select id="queryOrganizations" resultMap="BaseResultMap" parameterType="com.aas.system.org.domain.OrganizationModel" >
    select
    <include refid="Base_Column_List" />
    from t_org
  </select>
  <!-- 按ID删除机构 -->
  <delete id="delOrganization" parameterType="long[]" >
    delete from t_org where id in
    <foreach collection="ids" item="id" open="(" separator="," close=")">
    	#{id}
    </foreach>
  </delete>
  
  <!-- 更新组织机构信息 -->
  <update id="updateOrganization" parameterType="com.aas.system.org.domain.OrganizationModel" >
  	update t_org set f_org_code=#{orgCode,jdbcType=VARCHAR},f_org_name=#{orgName,jdbcType=VARCHAR}
  	where id= #{id,jdbcType=INTEGER}
  </update>
  
  <!-- 保存组织机构信息 -->
  <insert id="saveOrganization"   parameterType="com.aas.system.org.domain.OrganizationModel" >
    insert into t_org (id, f_org_code, f_org_name)
    values (#{id,jdbcType=INTEGER}, #{userCode,jdbcType=VARCHAR}, #{userName,jdbcType=VARCHAR})
  </insert>  
  
  <insert id="insertOrgs"   parameterType="java.util.List" >
    insert into t_user (id, f_usercode, f_username, f_name,f_pwd,f_locked)
    values
    <foreach collection="list" item="org"  index="index" separator=","> 
	    (#{org.id,jdbcType=INTEGER}, 
	    #{org.orgCode,jdbcType=VARCHAR}, 
	    #{org.orgName,jdbcType=VARCHAR})
      </foreach>
  </insert>
</mapper>